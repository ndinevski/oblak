# Development Dockerfile - runs without Firecracker
# Uses local Node.js for function execution

# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /impuls-server ./cmd/impuls-server

# Runtime stage
FROM node:20-alpine

RUN apk add --no-cache ca-certificates curl bash

WORKDIR /app

# Copy binary
COPY --from=builder /impuls-server /app/impuls-server

# Copy runtime files
COPY runtimes/ /app/runtimes/

# Create data directory
RUN mkdir -p /var/lib/impuls/functions \
    /var/lib/impuls/logs

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run in local mode (no Firecracker)
CMD ["/app/impuls-server", "--port", "8080", "--data-dir", "/var/lib/impuls", "--firecracker", "/dev/null"]
